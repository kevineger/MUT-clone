<div class="container">
	<div id="profile-container">
		<h3><%= @user.email%></h3>
		<ul class="nav nav-tabs" role="tablist">
			<li id="posts-tab" class="active tab"><%= link_to 'Posts', "/profile/posts/#{@user.id}", :remote => true%></li>
      <li  id="profile-tab" class="tab"><%= link_to 'Profile', "/profile/info/#{@user.id}", :remote => true%></li>
      <% if current_user.id == @user.id %>
			  <li id="messages-tab" class="tab"><%= link_to 'Messages', conversations_path, :remote => true%></li>
      <% end %>
			<li  class="pull-right"><%= button_to 'Create a Post',new_classified_post_path, :id=> "", :class=> "btn btn-md btn-blue", :method=> "get" %></li>
		</ul>
		<div class="profile-container-inner">
        </div>
	</div>
</div>
<script>
    $(document).ready(function(){
        console.log(window.location.hash);
        switch (window.location.hash) {
            case '#profile':
                $('a','#profile-tab').click();
                break;
            case '#messages':
                $('a','#messages-tab').click();
                break;
            default :
                $('a','#posts-tab').click();
                break;
        }
    });
</script>