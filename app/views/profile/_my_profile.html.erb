<script>
$(document).ready(function(){
  $('#hidden-password-fields').hide();
  $('button','#update-password-button').on('click', function(){
      $("#user_password").removeAttr("disabled");
      $("#user_password_confirmation").removeAttr("disabled");
    $('#hidden-password-fields').show();
    $(this).hide();
});
  $('#password-fields-collapse').on('click', function(){
    $('#hidden-password-fields').hide();
    $('button','#update-password-button').show();

      $("#user_password").attr("disabled", "disabled");
      $("#user_password_confirmation").attr("disabled", "disabled");
});

});
</script>