<div id="profile-profile">
  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-8">
        <%= form_for(@user, :url => { :action => "update", :controller => 'registrations' }) do |f|%>
          <div id="item-title" class="form-group">
            <h2 class="field-title">Username</h2>
            <%= f.text_field :username, :class => 'form-control'%>
          </div>
          <div id="item-title" class="form-group">
            <h2 class="field-title">Email</h2>
            <%= f.text_field :email, :class => 'form-control'%>
          </div>
          <div id="update-password-button" class="form-group">
            <button type="button" class="btn btn-default"> Update Password?</button>
          </div>
          <div id="hidden-password-fields" class="well">
            <div id="item-title" class="form-group">
              <h2 class="field-title">Password</h2>
              <%= f.password_field :password, :class => 'form-control', :autocomplete => :off%>
            </div>
            <div id="item-title" class="form-group">
              <h2 class="field-title">Password Confirm</h2>
              <%= f.password_field :password_confirmation, :class => 'form-control', :autocomplete => :off%>
            </div>
            <div class="form-group">
               <button type="button" id="password-fields-collapse" class="btn btn-defualt"><span class="glyphicon glyphicon-collapse-up"></span></button>
            </div>
          </div>
            <%= f.submit :type => 'submit', :class=>'btn btn-default btn-blue btn-post'%>
        <% end %>
      </div>
      <div class="col-lg-4">
        <div id="profile-picture">
          <img class="featured-pic center-pic" src="/assets/htmlcss.jpg">
          <div style="margin-top:15px;" class="row">
            <div class="col-md-12 text-center">
              <div class="btn-group">
                <a class="btn btn-default btn-lg" target="_blank" title="View Facebook Profile" href="http://www.facebook.com">
                  <i class="fa fa-facebook fa-lg fb"></i>
                </a>
                <a class="btn btn-default btn-lg" target="_blank" title="View Twitter Profile" href="http://www.twitter.com">
                  <i class="fa fa-twitter fa-lg tw"></i>
                </a>
              </div>
              <h5>Connect your social media</h5>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function(){
    $('#hidden-password-fields').hide();
    $('button','#update-password-button').on('click', function(){
        $('#hidden-password-fields').show();
        $(this).hide();
    });
      $('#password-fields-collapse').on('click', function(){
          $('#hidden-password-fields').hide();
          $('button','#update-password-button').show();
      });

  });
</script>