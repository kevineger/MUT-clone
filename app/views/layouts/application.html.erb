<!DOCTYPE html>
<html>
<head>
  <title>My Uni Trade</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body style="overflow-x: hidden; margin-top:100px;">
  <%= link_to image_tag("logoWG.png",:class => 'body-pic'), main_app.root_path, :class=>'pull-left' %>
      <!-- Top Navbar
      ================================================== -->
      <div class = "navbar navbar-blue navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class = "icon-bar"></span>
              <span class = "icon-bar"></span>
              <span class = "icon-bar"></span>
            </button>
            <%= link_to image_tag("logoMarkWG.png",:class => 'home-link'), main_app.root_path, :class=>'pull-left' %>
          </div>

          <div id="main-navbar-collapse" class="collapse navbar-collapse">
            <ul class = "nav navbar-nav navbar-left">
              <li class = "<%= 'active' if params[:action] == 'index' && params[:controller] == 'classified_posts' %>">
                <%= link_to 'Browse', main_app.classified_posts_path %>
              </li>
              <li class = "<%= 'active' if params[:action] == 'new' && params[:controller] == 'classified_posts'%>">
                <%= link_to 'Create a Post', new_classified_post_path %>
              </li>
            </ul>

            <% if defined?(current_user.email) %>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown dropdown-blue pull-right">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=current_user.email %> <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="/profile/<%=current_user.id%>">Posts</a></li>
                  <li><a href="/profile/<%=current_user.id%>#profile">Profile</a></li>
                  <li>
                    <a href="/profile/<%=current_user.id%>#messages">Messages
                        <% if current_user.unread? %>
                            <span class="badge pull-right alert-danger"><i class="fa fa-exclamation"></i></span>
                        <% end %>
                      </a>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to 'Logout', main_app.destroy_user_session_path ,:method => :delete%>
                  </li>
                </ul>
              </li>
            </ul>
            <% else %>
            <p class="nav navbar-nav navbar-text pull-right">
              <%= link_to 'Login', main_app.new_user_session_path, {:id => "login"}%>
            </p>
            <% end %>
            <div class="nav navbar-nav navbar-right">
              <%= render partial: 'layouts/search' %>
            </div>
          </div>

        </div>
      </div><!-- /.navbar -->

      <div id="back-to-top" style="display: none;">
        <button class="btn-back-to-top btn-lg"><span class="glyphicon glyphicon-chevron-up"></span></button>
      </div>

      <%= yield %>
        <p id="notice"><%= notice %></p>
      <!--<div class="row">-->
        <!--<small>Copyright 2014. My Uni.</small>-->
      <!--</div>-->
    </body>
</html>
