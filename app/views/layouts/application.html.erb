<!DOCTYPE html>
<html>
<head>
  <title>Mut</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="container">
      <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
          <p class="navbar-text navbar-left">Logo</p>
          <p class="navbar-text navbar-right">
            <% if defined?(current_user.email) %>
                 Logged in as <%= current_user.email %>, <%= link_to 'Logout?', destroy_user_session_path ,:method => :delete%>
            <% else %>
                <%= link_to 'Login?', new_user_session_path %>
            <% end %>
          </p>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li class="active"><a href="#">News</a></li>
              <li><a href="#">Classifieds</a></li>
              <li><%= link_to 'Forums', forem.forums_path %></li>
            </ul>
          </div>
        </div>
      </nav>
      <%= yield %>
      <div class="row">
        <center><small>Copyright 2014. My Uni.</small></center>
        <br/>
        <br/>
        <br/>
      </div><!--/row-->
    </div><!-- / container  -->
</body>
</html>
