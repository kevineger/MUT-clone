<%= form_for @user, :url => user_registration_path do |f|  %>

<div class="col-md-6 col-md-offset-3">
  <div id="grey-background">
    <h2 class="form-title">Sign Up</h2>
    <%= devise_error_messages! %>
    <div class="row">
      <div class="col-lg-6">
        <div id="item-title" class="form-group">
          <h2 class="field-title">Username</h2>
          <%= f.text_field :username, :class => 'form-control', :placeholder => "Username"%>
        </div>
        <div id="item-title" class="form-group">
          <h2 class="field-title">Password</h2>
          <%= f.password_field :password, :class => 'form-control', :placeholder => "Password"%>
        </div>
      </div>
      <div class="col-lg-6">
        <div id="item-title" class="form-group">
          <h2 class="field-title">Email</h2>
          <%= f.text_field :email, :class => 'form-control', :placeholder => "Email"%>
        </div>
        <div id="item-title" class="form-group">
          <h2 class="field-title">Confirm Password</h2>
          <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => "Password"%>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div id="item-concent" class="checkbox">
          <label>
            <input type="checkbox"> I agree to the <a href="#">Terms of Service</a>
          </label>
        </div>
        <label style="color:red;"><%= flash[:alert] %></label>
        <%= recaptcha_tags %>
        <div class="row" style="text-align:center;">
          <%= f.submit "Sign Up",:type => 'submit', :class=>'btn btn-default btn-lg btn-blue btn-post' %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>


