<%= form_for @user, :url => user_registration_path do |f|  %>
<%= devise_error_messages! %>
<div class="col-md-6 col-md-offset-3">
  <div id="grey-background">
    <h2 class="form-title">Sign Up</h2>
    <form role="form">
      <div id="item-title" class="form-group">
        <h2 class="field-title">Email</h2>
        <%= f.text_field :email, :class => 'form-control', :placeholder => "Email"%>
      </div>
      <div id="item-title" class="form-group">
        <h2 class="field-title">Password</h2>
        <%= f.password_field :password, :class => 'form-control', :placeholder => "Password"%>
      </div>
      <div id="item-title" class="form-group">
        <h2 class="field-title">Confirm Password</h2>
        <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => "Password"%>
      </div>
      <div id="item-pic" class="form-group">
        <h2 class="field-title">Your Picture</h2>
        <%= f.file_field :image, :class => 'pic-input'%>
        <p class="help-block">Select a Picture for Yourselft</p>
      </div>
      <div id="item-concent" class="checkbox">
        <label>
          <input type="checkbox"> I Agree to the Terms of Service
        </label>
      </div>
      <label style="color:red;"><%= flash[:alert] %></label>
      <%= recaptcha_tags %>
      <div class="row" style="text-align:center;">
        <%= f.submit "Sign Up",:type => 'submit', :class=>'btn btn-default btn-lg btn-blue btn-post' %>
      </div>
    </form>
  </div>
</div>
<% end %>


