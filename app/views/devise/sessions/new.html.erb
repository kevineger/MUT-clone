<div class="row">
  <%= form_for @user, :url => user_session_path do |f|  %>
      <div class="col-md-6 col-md-offset-3">
        <div id="grey-background">
          <h2 class="form-title">Sign In</h2>
          <form role="form">
            <div id="item-title" class="form-group">
              <h2 class="field-title">Email</h2>
              <%= f.text_field :email, :class => 'form-control', :placeholder => "Email"%>
            </div>
            <div id="item-title" class="form-group">
              <h2 class="field-title">Password</h2>
              <%= f.password_field :password, :class => 'form-control', :placeholder => "Password"%>
            </div>
            <div id="item-concent" class="checkbox">
              <label>
                <input type="checkbox"> Remember Me
              </label>
            </div>
            <div class="row" style="text-align:center;">
              <%= f.submit "Sign in",:type => 'submit', :class=>'btn btn-default btn-lg btn-blue btn-post' %>
            </div>
          </form>
        </div>
      </div>
  <% end %>
</div>
