<div class="row">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="col-md-6 col-md-offset-3">
      <div id="grey-background">
        <div class="row">
          <div class="col-lg-8 col-lg-offset-2">
            <h2 class="form-title">Forgot your password?</h2>
            <%= devise_error_messages! %>
            <div id="item-title" class="form-group">
              <h2 class="field-title">Email</h2>
              <%= f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => "Email"%>
            </div>
            <div class="row" style="text-align:center;">
              <%= f.submit "Email me resetting instructions",:type => 'submit', :class=>'btn btn-default btn-lg btn-blue btn-post' %>
            </div>
            <div >
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
</div>
