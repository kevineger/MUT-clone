<div class="row">
  <div class="col-sm-3 col-md-2 sidebar">
    <ul class="nav nav-sidebar">
      <li><a href="#">Classifieds</a></li>
    </ul>
    <ul id="categories-box" class="nav nav-sidebar">
      <li class="active"><a href="#">All Categories</a></li>
      <% @classified_categories.each do |category|%>
        <li><%= link_to category.name, from_category_classified_posts_path(:cat_id => category.id), :remote => true %></a></li>
      <% end%>
    </ul>
  </div>
