<div class="row">
  <!-- SIDEBAR -->
  <div class="col-sm-3 col-md-2 sidebar">
    <ul class="nav nav-sidebar">
      <li><a href="#">Classifieds</a></li>
    </ul>

    <ul id="categories-box" class="nav nav-sidebar">
      <li class="active"><%= link_to 'All Categories', from_category_classified_posts_path(:cat_id => 0), :remote => true %></li>
      <% @classified_categories.each do |category|%>
        <li><%= link_to category.name, from_category_classified_posts_path(:cat_id => category.id), :remote => true %></li>
      <% end%>
    </ul>

  </div>
  <!--.sidebar  -->

  <div id="category-section" class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" >
    <div style="position: relative;" class="container">
      <h1 class="page-header">All Categories <%= button_to 'Create a posting',new_classified_post_path, :id=> "", :class=> "btn btn-md btn-blue btn-new-post", :method=> "get" %> </h1>
      
      <!-- <div class="navbar-form navbar-right" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </div> -->
    </div>
    <!-- Individual add item -->
    <div id="post-grid" class="container">
      <%= render partial: 'classified_posts/posts_fill', locals: {posts: @posts.paginate(:page => 1)}  %>
    </div>
    <div id="back-to-top">
      <button class="btn-back-to-top btn-lg"><span class="glyphicon glyphicon-chevron-up"></span></button>
    </div> 
    <div class="text-center">
      <%= will_paginate @posts , :renderer => 'BootstrapPaginationHelper::LinkRenderer', :class => 'pagination'%>
    </div>
  </div>

</div>