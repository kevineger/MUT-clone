  <div class="box-nav">
    <!-- Category Menu -->
    <div class="row">
      <div class="menu visible-md visible-lg">
        <ul id="category-filter" class="menu-list">
          <li class="active"><%= link_to 'All Categories', from_category_classified_posts_path(:cat_id => nil), :remote => true %></li>
