<h1>Listing testicles</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testicles.each do |testicle| %>
      <tr>
        <td><%= testicle.size %></td>
        <td><%= link_to 'Show', testicle %></td>
        <td><%= link_to 'Edit', edit_testicle_path(testicle) %></td>
        <td><%= link_to 'Destroy', testicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Testicle', new_testicle_path %>
