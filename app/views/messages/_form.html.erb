<%= form_for(@message, :remote => true) do |f| %>
   <div id="message-form" style="color:#000;">
    <form role="form">
      <div id="item-title" class="form-group">
        <%= f.text_area :body, :class => 'form-control', :style => 'color:#000;', :placeholder => "Type your message here", :rows => '6'%>
        <%= f.hidden_field :conversation_id, :value =>conversation.id %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
      </div>
      <div class="col-md-12 text-center">
        <div class="row">
          <%= f.submit 'Send',:type => 'submit', :class=>'btn btn-default btn-lg btn-blue btn-post' %>
        </div>
      </div>
    </form>
  </div>
<% end %>
