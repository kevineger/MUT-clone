<%= form_for(@message) do |f| %>
    <div class="col-md-6 col-md-offset-3">
      <div id="new-post-background">
        <h2 class="form-title">Create a Listing</h2>
        <form role="form">
          <div id="item-title" class="form-group">
            <h2 class="field-title">Body</h2>
            <%= f.text_area :body, :class => 'form-control', :placeholder => "Body", :rows => '6'%>
          </div>
          <%= f.submit :type => 'submit', :class=>'btn btn-default btn-lg btn-blue btn-post' %>
        </form>
      </div>
    </div>
<% end %>
